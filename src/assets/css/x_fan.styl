.x_flex
  display: flex
.x_cell
  display: flex
  justify-content space-between 
  height .4rem
  line-height: 2em
  box-sizing border-box
  padding .1rem


.toast 
  position: fixed;
  bottom: 20%;
  left: 0;
  width: 100%;
  text-align center
  span 
    display inline-block
    padding .1rem .15rem
    border-radius .05rem
    background rgba(0,0,0,.8)
    color #fff